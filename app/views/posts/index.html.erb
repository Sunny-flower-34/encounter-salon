<section class="section">
  <h1>Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>
  <h1 class="title">
    投稿一覧
  </h1>
  </div>
  </div>

  <article class="align-center">
    <div class="cards">
      <% @posts.each do |post| %>
      <div class="card">

        <div class="Contributor">
          <div class="Contributor__imag">
            <%= attachment_image_tag post.user, :profile_image, fallback: "no-image.png", class: "userimage" %>
          </div>
          <div class="Contributor__name">
            <%=link_to post.user.username, user_path(post.user) %>
          </div>
        </div>

        <div class="card__image">
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, class:"imgsize" %>
          <% end %>
        </div>


        <div class="card__time">
          <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
        </div>
      </div>
      <% end %>
  </article>
  </div>
</section>