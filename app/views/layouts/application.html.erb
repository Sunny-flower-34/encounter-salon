<!DOCTYPE html>
<html>
  <head>
    <title>EncounterSalon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <div class="Notification">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

  <header class="header">
  
  <div>
    <div class="">ー</div>
    <div>ー</div>
    <div>ー</div>
  </div>
    <div>
        <%= link_to root_path, class: "title" do %>
        Encounter Salon 
        <% end %>
        <i class="fas fa-camera"></i>
        <i class="fa fa-heart-o"></i>
        <i class="fa fa-heart"></i>
        <i class="fa fa-heart-o"></i>
        <i class="fa fa-tag"></i>
        <i class="fa fa-envelope-o"></i>
        <i class="fa fa-envelope"></i>
    </div>
    <input type="text" class="input" placeholder="検索">
    <div>
      <% if user_signed_in? %>
        <ul class="menu">
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>ログアウト</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_post_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>新規投稿</p>
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>投稿一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to users_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>ユーザー一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to tags_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>タグ一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to  user_path(current_user), class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>マイページ</p>
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="menu">
          <li>
            <%= link_to posts_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>投稿一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to users_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>ユーザー一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>ログイン</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_password_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>pass忘れた</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "menu__list" do%>
              <p class="menu__list__eng">LOG OUT</p>
              <p>新規登録</p>
            <% end %>
          </li>
        </ul>
        <% end %>
    </div>
  </header>
    <%= yield %>
  </body>
</html>