<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<div>

  <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
  <%= @user.username %>
  <%= @user.profile %>
  <% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user) %>
  <%= @user.email %>
  <% end %>
  <% @user.tag_list.each do |tag| %>
       <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
  <% end %>
</div>

一覧

<div>
  <% @user.posts.each do |post| %>
    <% attachment_image_tag post, :image %>
     <%= link_to post_path(post) do %>
        詳細のフォントオーサム
     <% end %>
     <% if @user.id == current_user.id %>
     <%= link_to edit_post_path(post) do %>
       編集のフォントオーサム
     <% end %>
     <%= link_to post_path(post), method: :delete, data: {confirm: "消していいの？"} do %>
       削除のフォントオーサム
     <% end %>
     <% end %>
     <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %> 更新
  <% end %>

</div>